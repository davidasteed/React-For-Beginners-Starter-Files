.order-enter
  // background red
  transform: translateX(-120%) rotate(-90deg)
  transition 0.5s
  max-height 0
  padding 0 !important
  &.order-enter-active
    // background yellow
    transform: translateX(0)
    max-height 60px
    padding 2rem 0 !important

.order-exit
  // background thistle
  transform: translateX(0)
  transition 0.5s
  &.order-exit-active
    // background palegoldenrod
    transform: translateX(120%) rotate(45deg)
    padding: 0

.count-enter
  // background red
  transform: translateY(100%)
  transition 0.5s
  &.count-enter-active
    // background yellow
    transform: translateY(0)

.count-exit
  // background black
  transform: translateY(0)
  transition: 0.5s
  position absolute
  left 0
  bottom 0
  &.count-exit-active
    // background green
    transform: translateY(-100%)




















